#!/usr/bin/env bash
# Validate IPv4 address format

valid_ip() {
  local -- ip="${1:-}"
  [[ $ip =~ ^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$ ]] || return 1
  local -- IFS='.'
  local -ai octets
  #shellcheck disable=SC2206
  octets=( $ip )
  [[ ${octets[0]} -le 255 && ${octets[1]} -le 255 \
      && ${octets[2]} -le 255 && ${octets[3]} -le 255 ]]
}
valid_ip4() { valid_ip "$@"; }
valid_ip6() { return 1; }
declare -fx valid_ip valid_ip4 valid_ip6

# Check if the script is being sourced or executed directly
[[ "${BASH_SOURCE[0]}" == "${0}" ]] || return 0
#!/bin/bash #semantic ----------------------------------------------------------
set -euo pipefail
shopt -s inherit_errexit extglob nullglob

declare -r VERSION='1.1.0'
declare -r SCRIPT_NAME='validip'

if (($#)); then
  case $1 in
    -h|--help)
      cat <<EOT
$SCRIPT_NAME $VERSION - Validate IPv4 address format

Usage: $SCRIPT_NAME [options] <ip_address>
       source $SCRIPT_NAME  # Load valid_ip function

Options:
  -h, --help    Display this help
  -V, --version Display version

Exported Functions (when sourced):
  valid_ip <ip>   Returns 0 if valid IPv4, 1 if invalid

Validation:
  - Checks format: N.N.N.N where N is 0-255
  - Validates each octet is within range

Exit Codes:
  0   Valid IPv4 address
  1   Invalid IPv4 address
  22  Invalid option (EINVAL)

Examples:
  $SCRIPT_NAME 192.168.1.1 && echo valid || echo invalid
  $SCRIPT_NAME 256.1.1.1 && echo valid || echo invalid

  source $SCRIPT_NAME
  if valid_ip "\$ip"; then echo "Valid"; fi
EOT
      exit 0
      ;;
    -V|--version)
      echo "$SCRIPT_NAME $VERSION"
      exit 0
      ;;
    -*)
      >&2 echo "$SCRIPT_NAME: âœ— Unknown option ${1@Q}"
      exit 22
      ;;
  esac
fi

valid_ip "$1"
#fin
